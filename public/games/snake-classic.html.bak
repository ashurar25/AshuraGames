<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>งูกินผลไม้ คลาสสิก - ASHURA Games</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
            color: white;
        }
        .game-container {
            text-align: center;
        }
        canvas {
            border: 3px solid #00ff00;
            background: linear-gradient(45deg, #0a0a0a, #1a1a1a);
            border-radius: 10px;
            box-shadow: 0 0 30px rgba(0, 255, 0, 0.3);
        }
        .score {
            font-size: 24px;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .game-over {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.8);
            padding: 20px;
            border-radius: 10px;
            display: none;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s ease;
        }
        button:hover {
            background: linear-gradient(45deg, #ff8e8e, #ff6b6b);
        }
        .controls {
            margin-top: 15px;
            font-size: 14px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <div class="game-container">
        <div class="score">คะแนน: <span id="score">0</span></div>
        <canvas id="gameCanvas" width="400" height="400"></canvas>
        <div class="controls">ใช้ลูกศรหรือ WASD เพื่อเล่น</div>
        <div class="game-over" id="gameOver">
            <h2>เกมจบแล้ว!</h2>
            <p>คะแนนของคุณ: <span id="finalScore">0</span></p>
            <button onclick="restartGame()">เล่นใหม่</button>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const gameOverElement = document.getElementById('gameOver');
        const finalScoreElement = document.getElementById('finalScore');

        const gridSize = 20;
        const tileCount = canvas.width / gridSize;

        let snake = [
            {x: 10, y: 10}
        ];
        let food = {};
        let dx = 0;
        let dy = 0;
        let score = 0;
        let gameRunning = true;
        let gameSpeed = 100; // ms per frame

        function randomFood() {
            food = {
                x: Math.floor(Math.random() * tileCount),
                y: Math.floor(Math.random() * tileCount)
            };
        }

        function drawGame() {
            if (!gameRunning) return;

            changeSnakePosition();
            let result = isGameEnd();
            if (result) {
                gameOver();
                return;
            }

            clearScreen();
            checkFoodCollision();
            drawFood();
            drawSnake();
            drawScore();

            // Limit frame rate to 60 FPS
            setTimeout(drawGame, gameSpeed);
        }

        function clearScreen() {
            // Use a gradient for the background for a more dynamic look
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, '#0a0a0a');
            gradient.addColorStop(1, '#1a1a1a');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
        }

        function drawSnake() {
            ctx.fillStyle = '#00ff00'; // Brighter green for snake
            snake.forEach(part => {
                // Slightly rounded corners for snake segments
                ctx.beginPath();
                ctx.roundRect(part.x * gridSize, part.y * gridSize, gridSize - 2, gridSize - 2, 3);
                ctx.fill();
            });
        }

        function drawFood() {
            ctx.fillStyle = '#ff4d4d'; // Brighter red for food
            // Slightly rounded corners for food
            ctx.beginPath();
            ctx.roundRect(food.x * gridSize, food.y * gridSize, gridSize - 2, gridSize - 2, 3);
            ctx.fill();
        }

        function changeSnakePosition() {
            const head = {x: snake[0].x + dx, y: snake[0].y + dy};
            snake.unshift(head);

            if (head.x === food.x && head.y === food.y) {
                score += 10;
                // Increase speed slightly as score increases
                if (gameSpeed > 50) {
                    gameSpeed -= 2;
                }
                randomFood();
            } else {
                snake.pop();
            }
        }

        function isGameEnd() {
            // Check for self-collision
            for (let i = 4; i < snake.length; i++) {
                if (snake[i].x === snake[0].x && snake[i].y === snake[0].y) return true;
            }

            // Check for wall collision
            const hitLeftWall = snake[0].x < 0;
            const hitRightWall = snake[0].x >= tileCount;
            const hitTopWall = snake[0].y < 0;
            const hitBottomWall = snake[0].y >= tileCount;

            return hitLeftWall || hitRightWall || hitTopWall || hitBottomWall;
        }

        function gameOver() {
            gameRunning = false;
            finalScoreElement.textContent = score;
            gameOverElement.style.display = 'block';
            // Add a subtle fade-in effect for game over message
            gameOverElement.style.opacity = '0';
            let opacity = 0;
            const fadeInterval = setInterval(() => {
                if (opacity < 1) {
                    opacity += 0.1;
                    gameOverElement.style.opacity = opacity;
                } else {
                    clearInterval(fadeInterval);
                }
            }, 50);
        }

        function checkFoodCollision() {
            if (snake[0].x === food.x && snake[0].y === food.y) {
                score += 10;
                randomFood();
            }
        }

        function drawScore() {
            scoreElement.textContent = score;
        }

        function restartGame() {
            snake = [{x: 10, y: 10}];
            dx = 0;
            dy = 0;
            score = 0;
            gameRunning = true;
            gameSpeed = 100; // Reset speed
            gameOverElement.style.display = 'none';
            randomFood();
            drawGame();
        }

        document.addEventListener('keydown', (e) => {
            if (!gameRunning) return;

            // Prevent default arrow key scrolling
            if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'].includes(e.code)) {
                e.preventDefault();
            }

            switch(e.code) {
                case 'ArrowUp':
                case 'KeyW':
                    if (dy !== 1) { dx = 0; dy = -1; }
                    break;
                case 'ArrowDown':
                case 'KeyS':
                    if (dy !== -1) { dx = 0; dy = 1; }
                    break;
                case 'ArrowLeft':
                case 'KeyA':
                    if (dx !== 1) { dx = -1; dy = 0; }
                    break;
                case 'ArrowRight':
                case 'KeyD':
                    if (dx !== -1) { dx = 1; dy = 0; }
                    break;
            }
        });

        // Initial setup
        randomFood();
        drawGame();
    </script>
</body>
</html>